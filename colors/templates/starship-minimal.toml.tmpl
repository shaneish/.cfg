format = " $sudo $character"
right_format = "$directory $git_branch"
command_timeout = 1000

[directory]
truncate_to_repo = false
truncation_length = 1
fish_style_pwd_dir_length = 1
style = "#{{colors.starship.default_style}}"
format = "[Δ]($style bold) [$path$read_only]($style)"
home_symbol = "~"
read_only = '!'
truncation_symbol = '…/'

[line_break]
disabled = true

[character]
error_symbol =              "[⊘](#{{colors.starship.default_style}} bold blink)"
success_symbol =            "[○](#{{colors.starship.default_style}} bold)"
vimcmd_symbol =             "[○](#{{colors.starship.default_style}} bold)"
vimcmd_visual_symbol =      "[○](#{{colors.starship.default_style}} bold blink)"
vimcmd_replace_symbol =     "[⊝](#{{colors.starship.default_style}} bold)"
vimcmd_replace_one_symbol = "[⊝](#{{colors.starship.default_style}} bold blink)"

[git_branch]
format = "[$symbol]($style bold) [$branch]($style)"
symbol = "Γ"
style = "#{{colors.starship.default_style}}"

[sudo]
symbol = "αω"
format = '[$symbol](#{{colors.starship.default_style}} bold blink)'
disabled = false

[python]
symbol = "Π"
format = "[$symbol]($style bold) [$virtualenv]($style)"
style = "#{{colors.starship.default_style}}"
